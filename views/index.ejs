<% include partials/header %>
<div id='index'>
    <h1 id='index-header'>Contact List</h1>
    <table>
        <th>
            <tr id='table-header'>
                <td>#</td>
                <td>Name</td>
                <td>email</td>
                <td>phone</td>
            </tr>
        </th>
        <br>
        <% list.forEach(function(person){ %>
            <tr class='contact-row' id= '<%= person.id %>'</tr>
                <td class='num'><%= list.indexOf(person)+1 %></td>
                <td class='name' id='contentName'><%= person.name %></td>
                <td class='email'><%= person.email %></td>
                <td class='phone'><%= person.phone %></td>
                <td><button onclick='openDetails(event)' class='details'>details</button></td>
                <td><button class='edit'>edit</button></td>
                <td><button class='delete'>Delete</button></td>
            </tr>
        <% }) %>
    </table>
</div>
<div id='myModal' class='modal'>
    <div id='new-contact-form' class='modal-content'>
        <span class='modal-close'>&times</span>
        <h2 class='modal-header'> New Contact</h2>
        <% if(errors){ %>
            <ul>
            <% errors.forEach(function(error){ %>
                <li><%= error.msg %></li>
                <% }) %>
            </ul>
            <% } %>
        <form id='new_entry' name='new_entry'>
            <label>Name</label><br>
            <input class="new-name" id='name' type='name' name='name'><br>
            <label>Email</label><br>
            <input class="new-email" id='email' type='email' name='email'><br>
            <label>Phone</label><br>
            <input class="new-phone" id='phone' type='text' name='phone'><br>
            <button id='add_user' type ='submit' value='Submit'>Submit</button>
        </form>    
    </div>
    <div id='details-modal'>
        <span class='modal-close'>&times</span>
        <h2 class='modal-header'></h2>
        <p class='detailInfo'><label>Name:</label><p id='detailName' class='detailInfo'></p></p>
        <p class='detailInfo'><label>Email:</label><p id='detailEmail' class='detailInfo'></p></p>
        <p class='detailInfo'><label>Phone:</label><p id='detailPhone' class='detailInfo'></p></p>

    </div>
</div>
<script src='index.js'></script>
<script src="contact-list.js"></script>
<% include partials/footer %>